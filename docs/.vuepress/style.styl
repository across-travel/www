.carbon-ads, .bsa-cpc-wrapper, .bsa-cpc {
    display: none;
}

 .site-name, .navbar a {
    color: #7B463D;
    font-weight: bold;
}

.content div[class*="language-"] {
    background-color: #1D0D00;
}
.content code {
    color: #7B463D;
}

//------------------------home------------------------
.front {
    background-image: url("/imgs/sky.jpg");
    background-size: cover;
    padding-top: 2.2%;
    max-height: 666px;
}

.home .hero {
    color: #7B463D !important;
}
.home .description {
    color: #7B463D !important;
}
.new {
    padding: 0.5rem 2.2rem;
    border-radius: 5%; 
    height 3.3rem;
    font-size: 1.4rem;
    font-weight: bold;
    background-color: green;
    border: none;
}

.new a {
    color: #ffffff;
}

#join {
    width: 100%;
    text-align: center;
    font-size: 2rem;
    background-color: #bdf7cc;  
}
#join a {
    font-weight: bold;
    color: #7B463D;
}
//---------------------docs----------------------------------
.sidebar {
    width: 16rem;
}

::-webkit-scrollbar {
    width: 4px;
    height: 1px;
    background-color: #F5F5F5;
}
 
/*定义滑块 内阴影+圆角*/
::-webkit-scrollbar-thumb {
    border-radius: 10px;
    -webkit-box-shadow: inset 0 0 16px rgba(0,0,0,.3);
    background-color: #8AC3421;
}

//---------------------blog----------------------------

#lanmu {
    width: 100%;
    height: 11rem;
    background-image: url("/imgs/sky.jpg");
    background-size: cover;
    text-align: center;
}
#lanmu #word {
    font-size: 3rem;
    font-weight: bold;
    color: #7B463D;
    padding: 4rem 0;
    line-height: 3.3rem; 
}

h4 img {
    width: 1rem;
    height: 1rem; 
}

@media (max-width: 420px) {
    .front {
        max-height: 560px;
    }
    .content div[class*="language-"] {
        margin: 0.2rem;
    }
}
@media (min-width: 420px) and (max-width: 607px) {
    .front {
        max-height: 730px;
    }
}  
@media (min-width: 608px) and (max-width: 768px) {
    .front {
        max-height: 700px;
    }
}
@media (min-width: 960px) {
    .page {
       padding-right: 5rem;
    }
} 

@media (max-width: 460px) {
    #lanmu #word {
        padding: 3rem 0;
        line-height: 3.3rem; 
    }
}